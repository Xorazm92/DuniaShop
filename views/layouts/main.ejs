   <!-- custom javascript -->
   <script src="/js/custom.js"></script>
   <script src="/js/cart.js"></script>
   <script src="/js/search.js"></script>
   <%- script %>

   <script>
      // Loader
      $(window).on('load', function () {
         $(".loader_bg").fadeOut();
      });

      // Active menu item
      $(document).ready(function() {
         const currentPage = '<%= page %>';
         $(`.nav-item.${currentPage}`).addClass('active');
      });
   </script>
</body>
</html>
