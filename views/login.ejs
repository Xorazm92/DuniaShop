<%- include('partials/header', {
    title: 'Raya Dunia - Kirish',
    active: 'login',
    customCss: 'login',
    customJs: 'api'
}) %>

<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img src="/images/logo3.png" width="100%">
            </div>

            <div class="col-2">
                <div class="form-container">
                    <div class="form-btn">
                        <span onclick="login()">Kirish</span>
                        <span onclick="register()">Ro'yxatdan o'tish</span>
                        <hr id="Indicator">
                    </div>

                    <form id="LoginForm" onsubmit="handleLogin(event)">
                        <input type="email" placeholder="Email" id="loginEmail">
                        <input type="password" placeholder="Parol" id="loginPassword">
                        <button type="submit" class="btn">Kirish</button>
                    </form>

                    <form id="RegForm" onsubmit="handleRegister(event)">
                        <input type="text" placeholder="Foydalanuvchi nomi" id="regUsername">
                        <input type="email" placeholder="Email" id="regEmail">
                        <input type="password" placeholder="Parol" id="regPassword">
                        <button type="submit" class="btn">Ro'yxatdan o'tish</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer', { customJs: 'api' }) %>
